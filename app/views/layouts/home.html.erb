<body id="home3">

  <div class="st-container">

    <nav class="nav-menu">
      <h3>Menu</h3>
      <%= render 'layouts/navigation_items' %>
    </nav>

    <div class="st-pusher">

      <div class="st-content">

        <header class="navbar navbar-inverse hero" role="banner">
            <div class="container">
              <div class="navbar-header">
                  <a href="/" class="navbar-brand">GrowthPal</a>
              </div>
              <div class="sidebar-toggle">
                <div class="line"></div>
                <div class="line"></div>
