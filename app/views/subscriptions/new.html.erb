<% if Subscription.where(:email => current_user.email).count > 0 %>
  <h1>You already have a subscription</h1>
<% else %>

  <h1>Gold Subscription</h1>
  <%= form_tag subscriptions_path do %>
    <%= hidden_field_tag :plan_id, "growthpal-retainer" %>
    <script
      src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
      data-key=<%= Rails.configuration.stripe[:publishable_key] %>
      data-name="GrowthPal"
      data-description="Monthly Retainer"
      data-currency="aud"
      data-image="<%= asset_path 'stripe-icon.png' %>"
      data-email="<%= current_user.email %>">
    </script>
  <% end %>
   
  <h1>Silver Subscription</h1>
  <%= form_tag subscriptions_path do %>
    <%= hidden_field_tag :plan_id, "growthpal-retainer" %>
    <script
      src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
      data-key=<%= Rails.configuration.stripe[:publishable_key] %>
      data-name="GrowthPal"
      data-description="Another Plan"
      data-currency="aud"
      data-image="<%= asset_path 'stripe-icon.png' %>"
      data-email="<%= current_user.email %>">
    </script>
  <% end %>

<% end %>