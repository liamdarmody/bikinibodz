<div id="map" style="height:400px;">
  
  <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com.mx/?ie=UTF8&amp;ll=-33.869843,151.206161&amp;spn=0.023259,0.038495&amp;t=m&amp;z=15&amp;output=embed"></iframe>

</div>

<div id="info">
  <div class="container">
    <div class="row">
      <div class="col-md-8 message">
        <h3>Send us a message</h3>
        <p>
          You can contact us with anything related to GrowthPal. <br/> We'll get in touch with you as soon as possible.
        </p>
        
        <%= form_tag email_confirmation_path, method: 'post', html: {role: "form"} do %>
        <!-- <form role="form" id="contact-form" method="post"> -->
          <div class="form-group">
              <%= label_tag :name, "Your name" %>
              <%= text_field_tag :name, @name, placeholder: "Enter your name...", :autofocus => true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag :email, "Your email" %>
              <%= text_field_tag :email, @email, placeholder: "Enter your email...", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag :message, "Your message" %>
              <%= text_area_tag :message, @message, placeholder: "Enter your message...", rows: 10, class: "form-control" %>
              <!-- <textarea name="message" class="form-control" id="message" rows="6"></textarea> -->
            </div>
            <div class="submit">
              <input type="submit" class="button button-small" value="Email us" />
            </div>
        <% end %>
      </div>
      <div class="col-md-4 contact">
        <div class="address">
          <h3>Our Address</h3>
          <p>
            56 York Street,<br />
            Sydney, NSW 2000
          </p>
        </div>
        <div class="phone">
          <h3>By Phone</h3>
          <p>
            1300-111-222
          </p>
        </div>
      </div>
    </div>
  </div>
</div>